<section class="masthead text-white text-center" style="padding-top: 10rem; padding-bottom: 6rem; width:100%; text-align: center; overflow: auto">
    <div id="index" type="hidden">{{data.IDX}}</div>
    <div id="explan-box" class="text-center">
        {{data.GM_EXPLAIN}}
    </div>
    <div id="play-box" style="display: inline-flex;">
        <button class="question-box box gm_answer1" style=" border:0.5rem solid #e74c3c; border-radius: 0 0 0 0.5rem" onclick="gm_score()">
            <div class="question-text">{{data.QUESTION_A}}</div>
            <div class="score-box" style="display: none;"><div class="num" data-level="{{score.SCORE_A}}"></div><div class="per">%</div>
            {{!-- <div class="score-box">{{score.SCORE_A}}%</div> --}}
        </button>
        <button class="question-box box gm_answer2" style="border:0.5rem solid #3498db; border-radius: 0 0 0.5rem 0" onclick="gm_score()">
            <div class="question-text">{{data.QUESTION_B}}</div>
            <div class="score-box" style="display: none;"><div class="num" data-level="{{score.SCORE_B}}"></div><div class="per">%</div>
            {{!-- <div class="score-box">{{score.SCORE_B}}%</div> --}}
        </button>
    </div>
</section>

<!-- Comment Section-->
<section class="page-section bg-primary" id="Comment">
    <div class="comment">
        <!-- Comment Section Heading-->
        <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0 py-3">Comment</h2>
        <div id="comment" class="comment">
            <form id="comment_form" action="https://bellissue.com/comment_insert" method="post">
                <input type="text" autocomplete="off" name="comment_body" class="comment-body form-control px-3"
                    maxlength="140" id="comment_body" placeholder="댓글을 입력해주세요.">
                <div id="submit_parent" class="justify-content-between py-2" style="display: flex;">
                    <input type="password" class="form-control not_login_password comment-pass px-3" name="password" maxlength="20" placeholder="비밀번호">
                    <input type="button" name="submit" class="btn btn-dark comment_button" value="등록">
                </div>
                <input type="text" name="parent_id" value="0" style="display: none">
            </form>
            <div id="comment_count">댓글: {{lengthOfList comments}}개</div>
            <div id="comment_container">
                {{#each comments}}
                <div class="container mt-3">
                    <div class="d-flex justify-content-center row">
                        <div class="d-flex flex-column comment-section p-0">
                            <div class="bg-white p-2 rounded-3">
                                <div class="d-flex flex-row user-info position-relative">
                                    <span class="d-block font-weight-bold name">{{NICKNAME}}</span><span class="date text-black-50 position-absolute top-0 end-0">{{dateString CREATED_AT}}</span>
                                </div>
                                <p class="m-0">{{COMMENT}}</p>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</section>
<script src="/js/script_play.js"></script>